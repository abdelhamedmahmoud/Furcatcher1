<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dell.furcatcher1.login"
    android:background="@drawable/backgroundforlarge">


        <EditText
            android:layout_height="65dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordLogin"
            android:drawableLeft="@drawable/pass"
            android:drawablePadding="20dp"
            android:fontFamily="casual"
            android:background="@drawable/bo"
            android:foreground="@drawable/shape2"
            android:textColorHint="#ffff8800"
            android:hint="Enter Your password"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#ffff8800"

            android:layout_width="265dp"
            android:layout_alignTop="@+id/userLogin"
            android:layout_alignStart="@+id/userLogin"
            android:layout_marginTop="85dp" />

        <Button
            android:id="@+id/Register"
            android:background="@drawable/signin"
            android:layout_width="265dp"
            android:layout_height="50dp"
            android:layout_below="@+id/passwordLogin"
            android:layout_alignStart="@+id/passwordLogin"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="9dp" />

        <EditText
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/userLogin"
            android:background="@drawable/bo"
            android:layout_height="65dp"
            android:drawableLeft="@drawable/user"
            android:layout_width="265dp"
            android:layout_marginTop="204dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:foreground="@drawable/shape2"
            android:hint="Enter Your username"
            android:textColorHint="@color/colorAccent"
            android:textSize="11sp"
            android:gravity="left|center"
            android:drawablePadding="20dp"
            android:fontFamily="casual"
            android:textStyle="bold|italic" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/gplus"
            android:layout_height="wrap_content"
            android:layout_width="110dp"
            android:layout_alignBottom="@+id/face"
            android:layout_alignEnd="@+id/Register"
            android:layout_alignTop="@+id/face" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/face"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:elevation="14dp"
            android:layout_height="wrap_content"
            android:layout_width="106dp"
            android:layout_below="@+id/Register"
            android:layout_alignStart="@+id/Register" />


</RelativeLayout>
